<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ConfirmationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:text="Bus Scheduling Confirmed!"
            android:textAppearance="@android:style/TextAppearance.Material.Display2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:text="Date: November 18, 2018"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Time: 4:30pm"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Pickup Location: Senior Center"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:text="Dropoff Location: Mall"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Default Reminders: 5 min before"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Relative Reminders: Robert(Son), Christine(Niece)"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/Button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>